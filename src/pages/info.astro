---
import Layout from '../layouts/Layout.astro';
import Navigator from '../components/Navigator.astro';
import Instagram from '../../public/svg/ig.astro';
import Twitter from '../../public/svg/tw.astro';
---

<Layout title="Sobre Nosotros">
  <Navigator />
  <article>
    <h1>Informaci√≥n de Contacto</h1>
    <div class="ssmm">
        <Instagram />
        <Twitter />
    </div>
    <div class="Seccion-1">
        <p>
            Proximamente...
        </p>
    </div>
    </article>
</Layout>

<style>
    body{
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-bottom: 60px;
    }
    @media screen and (max-width: 800px){
        article{
            padding-top: 17vh;
        }
        article{
            width: 80vw;
            font-size: 1em;
        }
    }

    @media screen and (min-width: 800px){
        article{
            padding-top: 25vh;
        }
        article{
            width: 60vw;
            font-size: 1.3em;
        }
    }

    .ssmm{
        display: flex;
        flex-direction: row;
        gap: 20px;
        margin-bottom: 55px;
    }


  article{
    align-self: center;
    justify-content: center;
    text-align: justify;
  }

  h1{
    font-size: 2.5em;
  }
  p{
    margin-bottom: 1em;
    display: block;
    margin-block-start: 1em;
    margin-block-end: 1em;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
  }
  

  .seccion-1{
    display: flex;
  }

  img{
    max-width: 500px;
  }
</style>