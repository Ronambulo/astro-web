---
interface Props{
    src: string;
    nombre: string;
    papel: string;    
}

const{src,nombre,papel}: Props = Astro.props;
---

<div class="item">
  <div class="divTextoVD">
    <h3 class="PersonajeVD">{papel}</h3>
    <p class="NombreVD">{nombre}</p>
  </div>
  <div class="imageHover">
    <img class="imagenVD" src={src}/>
  </div>
</div>

<style>
    .item{
    display: flex;
  
    width: 21.9375em;
    height: 11.4375rem;
    flex-shrink: 0;
    box-shadow: 2px 6px 4px 0px rgba(0, 0, 0, 0.25);
    background: var(--Color-Secundario, #55A4D7);
    border-radius: 0.9375rem;
    margin-bottom: 1.75rem;
    overflow: hidden;
  }
  
  .imageHover{
    overflow: hidden;
  }
  
  .item img:hover {
    transform: scale(1.2);
    object-fit:initial;
    z-index: 0;
    transition: .2s linear;
  }
  
  /* DERECHA */
  
  .imagenVD{
    width: 8.8em;
    height: 11.4375rem;
    flex-shrink: 0;
  
    border-radius: 0rem 0.9375rem 0.9375rem 0rem;
    background: #E0E0E0;
  }
  
  .divTextoVD{
    align-self: center;
    padding-right: 1rem;
  
  }
  
  .PersonajeVD{
    width: 3.69em;
    height: 3.625rem;
    flex-shrink: 0;
  
    color: var(--BG-LightMode, #FBFBFE);
    text-align: right;
    font-family: Onyx-regular;
    font-size: 3.3rem;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  
    padding-top: 0.4em;
  }
  
  .NombreVD{
    /* width: 50vw; */
    height: 2.75rem;
    flex-shrink: 0;
    padding-top: 30px;
    margin-bottom: 20px;
    color: var(--Sub-Light, #DBDBDB);
    text-align: right;
    font-family: Archivo-Regular;
    font-size: 1rem;
    font-style: normal;
    font-weight: 400;
    line-height: 60%;
  }
</style>
